	<!-- 查询代码表（业务） -->
	<select id="getAa11tree" parameterClass="map" resultClass="java.util.HashMap">
		SELECT ID,
		NAME,
		LEVELVALUE,
		LEAF
		FROM v_aa11tree
		WHERE 1 = 1
		AND
		upper(type) = upper(#aaa100#)
		<dynamic>
			<isNotEmpty prepend="AND" property="yab003">
				(orgid = #yab003# or
				orgid = '9999')
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="aaa102">
				id like #aaa102#||'%'
			</isNotEmpty>
		</dynamic>
		order by ID
	</select>

