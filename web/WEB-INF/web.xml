<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://java.sun.com/xml/ns/javaee" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:app-context.xml</param-value>
  </context-param>
  <filter>
    <filter-name>TaRefererFilter</filter-name>
    <filter-class>com.yinhai.sysframework.security.ta3.TaRefererFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>TaRefererFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>org.jasig.cas.client.session.SingleSignOutHttpSessionListener</listener-class>
  </listener>
  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>
			com.yinhai.sysframework.security.ta3.Ta3SecurityFilter
		</filter-class>
  </filter>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>
			org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter
		</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>osivFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>
      <param-name>singleSession</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>DruidWebStatFilter</filter-name>
    <filter-class>com.alibaba.druid.support.http.WebStatFilter</filter-class>
    <init-param>
      <param-name>exclusions</param-name>
      <param-value>*.js,*.gif,*.jpg,*.png,*.css,*.ico,/jdbcmonitor/*</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>DruidWebStatFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>osivFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>
			com.yinhai.webframework.StartupListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>
			net.sf.ehcache.constructs.web.ShutdownListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>
			org.springframework.web.util.IntrospectorCleanupListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>com.yinhai.sysframework.security.ta3.TaSessionListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.apache.struts2.dispatcher.listener.StrutsListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>DruidStatView</servlet-name>
    <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
    <init-param>
      <param-name>allow</param-name>
      <param-value>localhost</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DruidStatView</servlet-name>
    <url-pattern>/jdbcmonitor/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SimpleCaptcha</servlet-name>
    <servlet-class>
			com.yinhai.ta3.system.web.SimpleCaptchaServlet
		</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SimpleCaptchaPassChange</servlet-name>
    <servlet-class>
			com.yinhai.ta3.system.web.SimpleCaptchaPassChangeServlet
		</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CXFServlet</servlet-name>
    <servlet-class> 
            org.apache.cxf.transport.servlet.CXFServlet  
        </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>SimpleCaptcha</servlet-name>
    <url-pattern>/CaptchaImg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SimpleCaptchaPassChange</servlet-name>
    <url-pattern>/CaptchaImgPass</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CXFServlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <!-- <welcome-file>welcome.jsp</welcome-file> -->
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>417</error-code>
    <location>/ta/417.jsp</location>
  </error-page>
  <error-page>
    <error-code>418</error-code>
    <location>/ta/418.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/ta/401.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/ta/500.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>5</session-timeout>
  </session-config>
</web-app>